<tr>
    <TdComponent Align="ML">@Item.Number</TdComponent>
    <TdComponent Align="ML">@ChildContent</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.BaseBegin,Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.BaseEnd,Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.CurrentBegin,Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.CurrentEnd,Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.BaseDeviation,Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.CurrentDeviation,Digits)</TdComponent>
</tr>

@code {
    [Parameter]
    public SolvencyRatiosRow Item { get; set; } = new();
    [Parameter]
    public int Digits { get; set; } = 3;
    [Parameter]
    public string Number { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}