<tr>
    <TdComponent Align="ML">@Item.Number</TdComponent>
    <TdComponent Align="ML">@FieldName</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.BaseYear, Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.CurrentYear, Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.AdjustedIndicator, Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.Total, Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.DueToRevenue, Digits)</TdComponent>
    <TdComponent Align="MR" Spacing="pr-2">@Constraints.RoundStr(Item.DueToAverageBalances, Digits)</TdComponent>
</tr>

@code {
    [Parameter]
    public FactorsAffectingTurnover Item { get; set; } = new();
    [Parameter]
    public int Digits { get; set; } = 2;
    [Parameter]
    public string? FieldName { get; set; }
}